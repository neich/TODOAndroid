<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.udg.pds.todoandroid" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="org.udg.pds.todoandroid.TodoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.NavigationActivity"></activity>
        <activity android:name=".activity.TaskList"></activity>
        <activity
            android:name=".activity.AddTask"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
